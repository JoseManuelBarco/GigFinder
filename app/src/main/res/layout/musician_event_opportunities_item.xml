<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local interesado"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="59dp"
        app:layout_constraintStart_toEndOf="@+id/opportunityLocalIconImageView"
        />

    <ImageView
        android:id="@+id/opportunityLocalIconImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logogigfinder"
        app:layout_constraintEnd_toStartOf="@+id/nombreTextView"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="43dp" />

    <TextView
        android:id="@+id/fechaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="19 feb 2025"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/horaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16:00"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="5dp" />

    <ImageView
        android:layout_width="33dp"
        android:layout_height="28dp"
        android:src="@drawable/logogigfinder"
        app:layout_constraintEnd_toStartOf="@+id/horaTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="33dp"
        android:layout_height="28dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/logogigfinder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>