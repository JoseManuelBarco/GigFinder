<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona los géneros que más te describan!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:padding="8dp">

        <Button
            android:text="Rock"
            android:layout_width="wrap_content"
             />
        <Button
            android:text="Electrónica"
            android:layout_width="wrap_content"
            />
        <Button
            android:text="Jazz"
            android:layout_width="wrap_content"
            />
        <Button
            android:text="Pop"
            android:layout_width="wrap_content"
            />
        <Button
            android:text="HipHop"
            android:layout_width="wrap_content"
            />
        <Button
            android:text="Clásica"
            android:layout_width="wrap_content"
            />
        <Button
            android:text="Latina/Reggaeton"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="Soundtracks"
    />
        <Button
            android:layout_width="wrap_content"
            android:text="Flauta"
           />
        <Button
            android:layout_width="wrap_content"
            android:text="Otros géneros populares"
         />
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona uno o más géneros"
        android:layout_marginTop="16dp"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar más tarde"
        android:layout_marginTop="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:layout_marginTop="8dp"
        android:backgroundTint="#00BCD4"
        android:textColor="#FFFFFF"/>
</LinearLayout>
